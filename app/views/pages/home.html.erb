<section id="hero" class="hero">
  <div class="text-center">
    <div class="col-md-12">
      <h1>Book A Granny</h1>
      <p class="tagline">Book a granny<br> in exchange for a deed of your own!</p>
      <section class="search-row" style="margin-top: 30px; ">
        <%= form_tag grandmother_offers_path, method: :get do %>
          <div class="flex-form">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",

            placeholder: "Set location", style: "font-size: 19px; border-top-left-radius: 12px; border-bottom-left-radius: 12px;" %>
            <%= submit_tag "Search", class: "submit", style: "height:60px;"%>

          <% end %>
          </div>
      </section>
    </div>
  </div>
</section>
