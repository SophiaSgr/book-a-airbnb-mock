<section id="hero" class="hero">
  <div class="text-center">
    <div class="col-md-12">
      <h1>Book A Granny</h1>
      <p class="tagline">Book a granny<br> in exchange for a deed of your own!</p>
      <section class="search-row" style="margin-top: 30px; ">
        <%= form_tag grandmother_offers_path, method: :get do %>
        <div>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Set location" %>
            <%= submit_tag "Search", class: "gbutton" %>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</section>


